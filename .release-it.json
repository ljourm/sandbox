{
  "hooks": {
    "before:npm:release": "echo \"//registry.npmjs.org/:_authToken=$NPM_TOKEN\" > .npmrc"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  },
  "git": {
    "requireCleanWorkingDir": false,
    "addFiles": ["package.json", "CHANGELOG.md"],
    "commitMessage": "chore: release ${version}"
  }
}
