{
  "github": {
    "release": false
  },
  "git": {
    "requireCleanWorkingDir": false,
    "addFiles": ["package.json", "CHANGELOG.md"],
    "commitMessage": "chore: release ${version}"
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "eslint",
      "infile": "CHANGELOG.md"
    }
  }
}
